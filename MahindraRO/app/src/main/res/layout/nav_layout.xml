<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_view1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="22dp">


        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:src="@drawable/mahindranav" />


        <custom_font.MyTextView_Lato_Medium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pratik"
            android:id="@+id/ename"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:textAllCaps="true"
            android:textColor="#222222"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp" />

            <custom_font.MyTextView_Lato_Light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:textSize="12sp"
                android:id="@+id/eid"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:text="MONTREAL, CANADA"/>


        </LinearLayout>

        <custom_font.MyTextView_Lato_Light
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/act"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="69dp"
            android:textColor="#222222"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">


            <custom_font.MyTextView_Lato_Light
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employee Profile"
                android:id="@+id/emppro"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="#222222"/>

        </FrameLayout>

        <custom_font.MyTextView_Lato_Light
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M-RO Admin"
            android:id="@+id/adminp"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#222222"/>


        <custom_font.MyTextView_Lato_Light
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About us"
            android:id="@+id/about"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#222222"/>




    </LinearLayout>

</android.support.design.widget.NavigationView>