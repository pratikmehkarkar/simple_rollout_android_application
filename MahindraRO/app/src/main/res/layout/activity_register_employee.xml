<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#fff"
tools:context="in.baselinesoft.mahindraro.activity.RegisterEmployee">


<ImageView
    android:id="@+id/logo"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/mahindranav"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"/>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/logo">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <custom_font.MyEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#aeb0a5"
        android:id="@+id/empid"
        android:textAlignment="center"
        android:hint="Enter Employee ID"
        android:layout_gravity="center"
        android:inputType="text"
        android:background="#00000000"
        android:textSize="12dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c1c1c1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        />

    <custom_font.MyEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#aeb0a5"
        android:id="@+id/empname"
        android:textAlignment="center"
        android:hint="Enter Employee Name"
        android:layout_gravity="center"
        android:inputType="text"
        android:background="#00000000"
        android:textSize="12dp"
        android:letterSpacing="0.1"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c1c1c1"
        android:textAlignment="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        />

    <custom_font.MyEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#aeb0a5"
        android:id="@+id/empmail"
        android:hint="E-mail Address"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:background="#00000000"
        android:textSize="12dp"
        android:letterSpacing="0.1"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c1c1c1"
        android:textAlignment="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        />
    <custom_font.MyEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#aeb0a5"
        android:hint="Mobile Number"
        android:id="@+id/empmobile"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:inputType="phone"
        android:background="#00000000"
        android:textSize="12dp"
        android:letterSpacing="0.1"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c1c1c1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        />
    <custom_font.MyEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#aeb0a5"
        android:id="@+id/emppass"
        android:hint="Enter Password"
        android:layout_gravity="center"
        android:inputType="text"
        android:background="#00000000"
        android:textSize="12dp"
        android:textAlignment="center"
        android:letterSpacing="0.1"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c1c1c1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        />



    <ImageView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:src="@drawable/sig"
        android:scaleType="fitXY"
        android:id="@+id/sub"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />
</LinearLayout>
    </ScrollView>
</RelativeLayout>
