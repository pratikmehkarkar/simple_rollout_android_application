<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <ImageButton
            android:id="@+id/updt"
            android:layout_alignParentRight="true"
            android:src="@drawable/dots"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_width="80dp" />
    </RelativeLayout>

<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <ImageView
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/symbol"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <custom_font.MyTextView_Lato_Medium
            android:id="@+id/uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pratik Mehkarkar"
            android:layout_gravity="center"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/mstart"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:src="@drawable/vertical"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <custom_font.MyTextView_Lato_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uemail"
            android:text="pratikmehkarkar@gmail.com"
            android:layout_gravity="top"
            android:textSize="12dp"/>
            <custom_font.MyTextView_Lato_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91-8975970500"
                android:id="@+id/umob"
                android:layout_gravity="top"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <custom_font.MyTextView_Lato_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee ID: 123456789"
            android:id="@+id/uid"
            android:layout_gravity="center"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#F8F9FD"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="100dp"
            android:layout_width="300dp">


            <RelativeLayout
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".05">
            <ImageView
                android:id="@+id/mymeet"
                android:layout_centerInParent="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/mymeet"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".02"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".05">
                <ImageView
                android:id="@+id/myman"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/manageroll"/>


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
</RelativeLayout>
